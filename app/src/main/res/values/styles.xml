<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- StartGame theme. -->
    <style name="StartGame" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="full" parent="StartGame">
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style
        name="dialog_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

    <style
        name="dialog_animation_slide" >
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style
        name="main_activity_animation_long_fade" >
        <!--<item name="android:windowEnterAnimation">@anim/long_fade_in</item>-->
        <item name="android:windowReturnTransition">@anim/long_fade_out</item>
        <item name="android:windowExitAnimation">@anim/long_fade_out</item>
    </style>

    <style
        name="TransparentAlertDialog" parent="AppTheme">
        <item name="android:background">#00000000</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style
        name="TransparentDialog" parent="StartGame">
        <item name="android:statusBarColor">@color/colorDialogBackground</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OrangeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ProgressBarDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorProgressBarBackground</item>
        <item name="android:colorBackground">@color/colorProgressBarBackground</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:statusBarColor">@color/tranparent</item>


    </style>


</resources>
