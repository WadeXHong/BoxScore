<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/ripple_layout"
    >

    <TextView
        android:id="@+id/item_dialog_player_number"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="87"
        android:textColor="@color/colorTextInMainButton"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/item_dialog_player_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:gravity="center|start"
        android:text="王曉明"
        android:textColor="@color/colorTextInMainButton"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/item_dialog_player_number" />



</android.support.constraint.ConstraintLayout>