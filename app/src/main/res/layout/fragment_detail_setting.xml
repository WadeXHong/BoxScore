            android:text="@string/secondhalf"
            android:textColor="@color/colorTextInMainButton"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_detailsetting_timeouts_secondhalf_edittext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_detailsetting_timeouts_secondhalf_edittext" />

