            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ripple_btn_datarecord"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="＋"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_detailsetting_totalquarter_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_detailsetting_totalquarter_edittext" />


        <TextView
            android:id="@+id/fragment_detailsetting_maxfoul_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maxFoul"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextInMainButton"
