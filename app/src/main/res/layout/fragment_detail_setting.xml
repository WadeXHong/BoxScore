            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_edittext_gamename"
            android:text="5"
            android:maxLength="1"
            android:gravity="center_vertical"
            android:inputType="number"
