        <TextView
        android:id="@+id/fragment_detailsetting_timeouts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/timeoutAmount"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:textColor="@color/colorTextInMainButton"
        app:layout_constraintTop_toBottomOf="@id/fragment_detailsetting_maxfoul_edittext" />

        <TextView
            android:id="@+id/fragment_detailsetting_firsthalf_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/firstHalf"
            android:textColor="@color/colorTextInMainButton"
            android:textSize="16sp"
