<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_detailsetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wade8.boxscore.com.wadexhong.wade8.boxscore.detailsetting.DetailSettingFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp">

        <TextView
            android:id="@+id/fragment_detailsetting_quarterlength_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quarterLength"
            android:paddingHorizontal="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextInMainButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_detailsetting_quarterlength_textview"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_edittext_gamename"
            android:text="10"
            android:gravity="center_vertical"
            android:maxLength="2"
            android:inputType="number"
            android:paddingHorizontal="5dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_detailsetting_quarterlength_title" />

        <TextView
            android:id="@+id/fragment_detailsetting_quarterlength_unit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:text="@string/minute"
            android:textColor="@color/colorTextInMainButton"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_detailsetting_quarterlength_textview"
            app:layout_constraintStart_toEndOf="@+id/fragment_detailsetting_quarterlength_textview"
            app:layout_constraintTop_toTopOf="@+id/fragment_detailsetting_quarterlength_textview" />

        <Button
            android:id="@+id/fragment_detailsetting_quarterlength_minus"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ripple_btn_datarecord"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="－"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_detailsetting_quarterlength_textview"
            app:layout_constraintEnd_toStartOf="@+id/fragment_detailsetting_quarterlength_plus"
            app:layout_constraintTop_toTopOf="@+id/fragment_detailsetting_quarterlength_textview" />

        <Button
            android:id="@+id/fragment_detailsetting_quarterlength_plus"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ripple_btn_datarecord"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="＋"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_detailsetting_quarterlength_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_detailsetting_quarterlength_textview" />



        <TextView
            android:id="@+id/fragment_detailsetting_totalquarter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/totalQuarter"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:textSize="16sp"
            android:textColor="@color/colorTextInMainButton"
