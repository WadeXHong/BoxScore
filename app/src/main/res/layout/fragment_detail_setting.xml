            android:layout_marginStart="8dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingHorizontal="10dp"
            android:text="@string/quarter"
            android:textColor="@color/colorTextInMainButton"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_detailsetting_totalquarter_edittext"
            app:layout_constraintStart_toEndOf="@+id/fragment_detailsetting_totalquarter_edittext"
            app:layout_constraintTop_toTopOf="@+id/fragment_detailsetting_totalquarter_edittext" />

        <Button
            android:id="@+id/fragment_detailsetting_totalquarter_minus"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"
