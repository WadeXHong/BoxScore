<?xml version="1.0" encoding="utf-8"?>
<com.wadexhong.boxscore.customlayout.BSLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gameboxscore_outestlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDarkBackground"
    tools:context="com.wadexhong.boxscore.gameboxscore.GameBoxScoreActivity">

    <com.wadexhong.boxscore.customlayout.BSConstraintLayout
        android:id="@+id/activity_gameboxscore_toplayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_gameboxscore_yourteamscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="87"
            android:textColor="@color/colorRed"
            android:textSize="60sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.500" />

        <TextView
            android:id="@+id/activity_gameboxscore_opponentteamscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="87"
            android:textColor="@color/colorRed"
            android:textSize="60sp"
            android:textStyle="bold"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.50" />

        <TextView
            android:id="@+id/activity_gameboxscore_yourteamfoul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="0"
            android:textColor="@color/colorOrange"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_gameboxscore_teamfoulleft" />

        <TextView
            android:id="@+id/activity_gameboxscore_opponentteamfoul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:text="0"
            android:textColor="@color/colorOrange"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_gameboxscore_teamfoulright" />


        <TextView
            android:id="@+id/activity_gameboxscore_quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="start"
            android:text="1"
            android:textColor="@color/colorOrange"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />

        <TextView
            android:id="@+id/activity_gameboxscore_makeup"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="25dp"
            android:text="補登"
            android:textColor="@color/colorButtonInMain"
            android:gravity="center"
            android:textSize="15sp"
            android:background="@drawable/shape_edittext_gamename"
            app:layout_constraintBottom_toTopOf="@+id/activity_gameboxscore_quartertitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />

        <ImageView
            android:id="@+id/activity_gameboxscore_save"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_save"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activity_gameboxscore_setting"
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_setting_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activity_gameboxscore_datastatistic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ripple_table"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/activity_gameboxscore_teamfoulleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="團犯"
            android:textColor="@color/colorButtonInMain"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/activity_gameboxscore_yourteamfoul"
            app:layout_constraintStart_toStartOf="@+id/activity_gameboxscore_yourteamfoul"
            app:layout_constraintTop_toBottomOf="@+id/activity_gameboxscore_yourteamscore" />

        <TextView
            android:id="@+id/activity_gameboxscore_datastatistictitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/dataStatistic"
            android:textColor="@color/colorButtonInMain"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/activity_gameboxscore_datastatistic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/activity_gameboxscore_teamfoulright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="團犯"
            android:textColor="@color/colorButtonInMain"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/activity_gameboxscore_opponentteamfoul"
            app:layout_constraintStart_toStartOf="@+id/activity_gameboxscore_opponentteamfoul"
            app:layout_constraintTop_toBottomOf="@+id/activity_gameboxscore_opponentteamscore" />
        <TextView
            android:id="@+id/activity_gameboxscore_teamscore_yours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="我方"
            android:textColor="@color/colorButtonInMain"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/activity_gameboxscore_yourteamscore"
            app:layout_constraintStart_toStartOf="@+id/activity_gameboxscore_yourteamscore"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.257" />

        <TextView
            android:id="@+id/activity_gameboxscore_teamscore_opponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="對方"
            android:textColor="@color/colorButtonInMain"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/activity_gameboxscore_opponentteamscore"
            app:layout_constraintStart_toStartOf="@+id/activity_gameboxscore_opponentteamscore"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.257" />

        <TextView
            android:id="@+id/activity_gameboxscore_quartertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="節數"
            android:textColor="@color/colorButtonInMain"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <LinearLayout
            android:id="@+id/activity_gameboxscore_opponentteamscore_adjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/activity_gameboxscore_opponentteamscore"
            app:layout_constraintStart_toEndOf="@+id/activity_gameboxscore_opponentteamscore"
            app:layout_constraintTop_toTopOf="@+id/activity_gameboxscore_opponentteamscore">

            <ImageView
                android:id="@+id/activity_gameboxscore_opponentteamscore_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_plus_box_white_24dp" />

            <ImageView
                android:id="@+id/activity_gameboxscore_opponentteamscore_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_minus_check_box_white_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_gameboxscore_opponentteamfoul_adjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/activity_gameboxscore_opponentteamfoul"
            app:layout_constraintStart_toEndOf="@+id/activity_gameboxscore_opponentteamfoul"
            app:layout_constraintTop_toTopOf="@+id/activity_gameboxscore_opponentteamfoul">

            <ImageView
                android:id="@+id/activity_gameboxscore_opponentteamfoul_plus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_plus_box_white_24dp" />

            <ImageView
                android:id="@+id/activity_gameboxscore_opponentteamfoul_minus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_minus_check_box_white_24dp" />

        </LinearLayout>



    </com.wadexhong.boxscore.customlayout.BSConstraintLayout>


    <LinearLayout
        android:id="@+id/activity_gameboxscore_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_weight="3">

        <android.support.design.widget.TabLayout
            android:id="@+id/activity_gameboxscore_tablelayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabBackground="@drawable/selector_tabbackground"
            app:tabIndicatorColor="@color/secondaryDarkColor"
            app:tabIndicatorHeight="0dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/secondaryDarkColor"/>

        <com.wadexhong.boxscore.customlayout.BSViewPager
            android:id="@+id/activity_gameboxscore_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </com.wadexhong.boxscore.customlayout.BSViewPager>

    </LinearLayout>


</com.wadexhong.boxscore.customlayout.BSLinearLayout>
