<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_teamplayers_layout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/ripple_layout">


    <TextView
        android:id="@+id/item_teamplayers_playernumber"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:maxLength="2"
        android:gravity="center"
        android:text="00"
        android:textColor="@color/colorButtonInMain"
        android:textSize="20sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_teamplayers_playername"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="75dp"
        android:gravity="center|start"
        android:maxLength="15"
        android:text="王曉明"
        android:textColor="@color/colorButtonInMain"
        android:textSize="20sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_teamplayers_edit"
        app:layout_constraintStart_toStartOf="@+id/item_teamplayers_playernumber"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_teamplayers_edit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_teamplayers_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_teamplayers_delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_delete_forever_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>