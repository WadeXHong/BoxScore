<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wade8.boxscore.com.wadexhong.wade8.boxscore.startgame.StartGameActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_startgame_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        app:title="賽前設定"
        app:titleTextColor="@color/colorWhite">

        <TextView
            android:id="@+id/activity_boxscore_startgamebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="開始紀錄"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/activity_boxscore_nextpage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_keyboard_arrow_right_white_30dp" />

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_startgame_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/selector_tabbackground"
        app:tabIndicatorColor="@color/secondaryDarkColor"
        app:tabIndicatorHeight="3dp" />

    <com.wadexhong.boxscore.customlayout.BSViewPager
        android:id="@+id/activity_startgame_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    </com.wadexhong.boxscore.customlayout.BSViewPager>




</LinearLayout>
